<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CountryAppISO3166.ViewModels"
             x:Class="CountryAppISO3166.Views.SubRegionAdd">


    <StackLayout VerticalOptions="Center"
                 Spacing="20"
                 Padding="20">

        <Entry Text="{Binding SelectedItem.Code}"
               FontSize="24"
               Placeholder="Code" />


        <Entry Text="{Binding SelectedItem.Category}"
               FontSize="24"
               Placeholder="Category" />

        <Entry Text="{Binding SelectedItem.Name}"
               FontSize="24"
               Placeholder="Name" />


        <Button Text="Send Sub Region"
                BackgroundColor="DodgerBlue"
                TextColor="White"
                FontSize="30"
                Command="{Binding SendItemCommand}" />

    </StackLayout>


</ContentPage>